// todo ~~~~~~~~~~~~~~ NAVBAR RESPONSIVE FOR MOBILE ~~~~~~~~~~~~~~~~~~~~~~~~

let menuBar = document.getElementById("menuBar");
let closeBtn = document.getElementById("closeBtn");
let collapseMenu = document.querySelector("#collapseMenu");
let body = document.body;

menuBar.addEventListener("click", () => {
  collapseMenu.style.right = "0vw";
  body.style.overflow = "hidden";
});

closeBtn.addEventListener("click", () => {
  collapseMenu.style.right = "-100vw";
  body.style.overflow = "";
});

// Decking-button

let xtremeBtn = document.getElementById("xtreme-btn");
let ecoproBtn = document.getElementById("ecopro-btn");

let desertOak = document.getElementById("desert-oak");
let blackBean = document.getElementById("black-bean");

let btnItems = [xtremeBtn, ecoproBtn];
let cardItems = [desertOak, blackBean];

desertOak.style.display = "block";
blackBean.style.display = "none";

btnItems.forEach((item, index) => {
  if (item) {
    item.addEventListener("click", () => {
      btnItems.forEach((btn) => btn.classList.remove("active-decking"));
      item.classList.add("active-decking");
      cardItems.forEach((card) => (card.style.display = "none"));
      cardItems[index].style.display = "block";
    });
  }
});

